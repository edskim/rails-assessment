<h1>Create new order:</h1>

<%= form_for(@order) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label "Price $" %>
  <%= f.text_field :price %>

  <%= f.label "Customer id" %>
  <%= f.text_field :customer_id %>

  <%= f.submit "Create the order", class: "btn btn-large btn-primary" %>

<% end %>

